
@{
    ViewBag.Title = "FriendsHome";
}

<h2>Friends Home</h2>
<body>
    <script>
        window.fbAsyncInit = function () {
            FB.init({
                appId: '331582300627984',
                cookie: true,
                xfbml: true,
                version: 'v2.8'
            });
        
        FB.getLoginStatus(function (response) {
            if (response.status === 'connected') {
                document.getElementById('status').innerHTML = 'Current Status: Connected to Facebook';
            } else if (response.status === 'not_authorized') {
                document.getElementById('status').innerHTML = 'Current Status: Not logged in';
            }
            else {
                document.getElementById('status').innerHTML = 'Current Status: Not logged into Facebook';
            }
        });
     };

        (function (d, s, id) {
            var js, fjs = d.getElementsByTagName(s)[0];
            if (d.getElementById(id)) { return; }
            js = d.createElement(s); js.id = id;
            js.src = "//connect.facebook.net/en_US/sdk.js";
            fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));

        function login() {
            FB.login(function(response) {
                if (response.status === 'connected') {
                    document.getElementById('status').innerHTML = 'Current Status: Connected to Facebook';
                } else if (response.status === 'not_authorized') {
                    document.getElementById('status').innerHTML = 'Current Status: Not logged in';
                }
                else {
                    document.getElementById('status').innerHTML = 'Current Status: Not logged into Facebook';
                }
            });
        }


         

    </script>

    <div id="status"></div>
    <button onclick="login()">Login</button>
   
</body>